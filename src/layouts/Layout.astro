---
interface Props {
	title: string;
}

const { title } = Astro.props;

import './../../styles/main.scss'
import './../../styles/glide.theme.min.css'
import './../../styles/glide.core.min.css'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

---

<!doctype html>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="A Seitel Telecom oferece internet de alta qualidade, com planos acessíveis e suporte técnico especializado. Conecte-se com a melhor tecnologia!" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/images/Favicon.png" />
		<!-- FLATICON  -->
		<link rel='stylesheet' href='https://cdn-uicons.flaticon.com/2.4.2/uicons-regular-rounded/css/uicons-regular-rounded.css'>
		<link rel="stylesheet" href="/styles/glide.core.min.css">
		<link rel="stylesheet" href="/styles/glide.theme.min.css">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- Google Tag Manager -->
		<script is:inline>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
		new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
		j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
		'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
		})(window,document,'script','dataLayer','GTM-N97ZF6F');</script>
		<!-- End Google Tag Manager -->
		
	</head>
	<body>
				<!-- Google Tag Manager (noscript) -->
				<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-N97ZF6F"
					height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
					<!-- End Google Tag Manager (noscript) -->
		<Header />
		<slot />
		<Footer />
		<script is:inline src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
		<script is:inline src="https://unpkg.com/@glidejs/glide@3.6.2/dist/glide.js"></script>
		<script is:inline src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
		<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
		<script is:inline>
			$(document).ready(function() {
				$('#Telefone').mask('(00) 0 0000-0000')
			})
		</script>
		<script is:inline>
			new Glide('.glide', {
				type: 'carousel',
				perView: 4,
				gap: 80,
				autoplay: 3000,
				hoverpause: 'true',
				breakpoints: {
					1024: {
					perView: 2
					},
					600: {
						perView: 1,
						// focusAt: 'center',
					}
				}
			}).mount()
		  </script>
	</body>
</html>
