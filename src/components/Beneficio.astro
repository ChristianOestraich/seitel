---
interface Props {
	image: string;
    title: string;
    text: string
}

const { image, title, text } = Astro.props;
---

<div class="flex flex-row hover:-translate-y-1 duration-300 gap-10 items-center md:w-1/3 rounded-2xl py-4 px-6 shadow-md">
    <div>
        <img class="h-32" src={image} alt="">
    </div>
    <div class="flex flex-col gap-1">
        <h3 class="font-bold text-text text-xl">{title}</h3>
        <p>
           {text}
        </p>
    </div>
</div>