---
import Pricetable from '../components/Price-table.astro'
---

<section class="px-[6%] py-12">
    <div class="">
      <h2 class="text-[#293659] font-bold text-4xl text-center">PLANOS DE INTERNET</h2>
      <h3 class="text-center text-base text-[#0280d8] mt-2">Conecte-se ao que há de melhor em internet fibra óptica!</h3>
    </div>
  
    <div class="glide py-12">
      <div class="glide__track" data-glide-el="track">
        <ul class="glide__slides">
            <li class="glide__slide">
                <Pricetable mega='500' unidade='MB' globo='' deezer='' tv='/images/Seitel-tv.svg' watch='' telecine='' ubook='/images/skeelo1.svg' segundo='' ou='' conversor='' valor='99,90' />
            </li>
            <li class="glide__slide">
              <Pricetable mega='600' unidade='MB' globo='' deezer='' tv='/images/Seitel-tv.svg' watch='' telecine='' ubook='/images/skeelo1.svg' segundo='' ou='' conversor='' valor='109,90' />
          </li>
            <li class="glide__slide">
                <Pricetable mega='700' unidade='MB' globo='' deezer='' tv='/images/Seitel-tv.svg' watch='' telecine='' ubook='/images/skeelo1.svg' segundo='' ou='' conversor='' valor='119,90' />
            </li>
            <li class="glide__slide">
                <Pricetable mega='700' unidade='MB' globo='' deezer='' tv='/images/Seitel-tv.svg' watch='/images/Watch.svg' telecine='/images/Paramount.svg' ubook='/images/skeelo1.svg' segundo='/images/segundo.png' ou='OU' conversor='/images/conversor.png' valor='129,90' />
            </li>
            <li class="glide__slide">
                <Pricetable mega='800' unidade='MB' globo='/images/max.svg' tv='/images/Seitel-tv.svg' globo='/images/Globo.svg' deezer='/images/Deezer.svg' tv='/images/Seitel-tv.svg' watch='/images/Watch.svg' telecine='/images/Paramount.svg' ubook='/images/skeelo1.svg' segundo='/images/segundo.png' ou='OU' conversor='/images/conversor.png' valor='149,90' />
            </li>
            <li class="glide__slide">
                <Pricetable mega='1' unidade='GB'  globo='/images/max.png' deezer='/images/Deezer.svg' tv='' watch='/images/Watch.svg' telecine='/images/Paramount.svg' ubook='/images/skeelo1.svg' segundo='/images/segundo.png' ou='OU' conversor='/images/conversor.png' valor='199,90'/>
            </li>
            
          </ul>
      </div>
  
      <!-- Controles de navegação -->
      <div class="glide__arrows" data-glide-el="controls">
        <button class="glide__arrow glide__arrow--left" data-glide-dir="<">←</button>
        <button class="glide__arrow glide__arrow--right" data-glide-dir=">">→</button>
      </div>
  
      <!-- Indicadores (opcional) -->
      <div class="glide__bullets" data-glide-el="controls[nav]">
        <button class="glide__bullet" data-glide-dir="=0"></button>
        <button class="glide__bullet" data-glide-dir="=1"></button>
        <!-- Adicione mais bullets conforme necessário -->
      </div>
    </div>
  </section>
  
 