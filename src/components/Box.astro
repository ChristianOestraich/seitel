---
interface Props {
    icone: string,
    titulo: string,
    subtitulo: string
}

const {icone, titulo, subtitulo } = Astro.props;
---

<div class="bg-[#F3F7FB] hover:-translate-y-1 transition-all duration-300 w-80 rounded-2xl py-5 flex flex-col  px-6">
    <img class="h-20" src={icone} alt="Icone wifi">
    <h3 class="text-center text-text font-bold text-2xl mt-4">{titulo}</h3>
    <p class="text-center mt-2">
        {subtitulo}
    </p>
</div>