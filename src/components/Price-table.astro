---
interface Props {
    mega: string;
    valor: string;
    unidade: string;
    globo: string;
    deezer: string;
    tv: string;
    watch: string;
    telecine: string;
    segundo: string;
    ou: string
    conversor: string;
    ubook: string
}

const { mega, valor, unidade, globo, deezer, tv, watch, telecine, segundo, conversor, ubook, ou } = Astro.props;

import Icontext from "../components/Icon-text.astro";
---

    <div class="bg-white border border-2 border-secondary w-full hover:-translate-y-1 duration-300 rounded-2xl flex flex-col items-center">
        <h3 class="text-5xl mt-8 text-start font-bold text-[#004765]">
            {mega}<span class="font-light text-primary">{unidade}</span>
        </h3>
        <h4 class="mt-4 text-lg">Por R${valor}</h4>
        <div class="flex flex-row top-0 mt-4 justify-center gap-x-0.5 items-center w-full">
            <img class={`h-12 ${mega === '800' ? 'h-9' : ''}`} src={globo} />
            <img class={`h-12 ${mega === '800' ? 'h-9' : ''}`} src={deezer} />
            <img class={`h-12 ${mega === '800' ? 'h-9' : ''}`} src={tv} />
            <img class={`h-12 ${mega === '800' ? 'h-9' : ''}`} src={watch} />
            <img class={`h-12 ${mega === '800' ? 'h-9' : ''}`} src={telecine} />
            <img class={`h-12 ${mega === '800' ? 'h-9' : ''}`} src={ubook} />
         </div>
         <div class="mt-4">
            <span class="flex flex-row gap-2 items-center"><img src="/images/Ok.svg" alt="">Wi-fi 6</span>
            <span class="flex flex-row gap-2 items-center"><img src="/images/Ok.svg" alt="">Instalação Grátis</span>
         </div>
        <!-- <img class="mt-4" src="/images/Line.png" alt="Linha"> -->
        <!-- <span class="mt-6 text-text">VANTAGENS:</span> -->
        <!-- <div class="flex flex-col gap-6 mt-4">
                    <Icontext icon='/images/Wifi-icon.svg' text='Wi-fi Premium' />
                    <Icontext icon='/images/suport.svg' text='Suporte Humanizado' />
                    <Icontext icon='/images/gratis.svg' text='Instalação Grátis' />
                </div> -->
        <img class="w-52 mt-6" src={segundo} alt="">
        <span class="mt-2">{ou}</span>
        <img class="w-52 mt-2" src={conversor} alt="">
        <!-- <span class="mt-6 text-text">APPS INCLUSOS:</span> -->
        <a
            href="https://wa.me/555136531254?text=Ol%C3%A1%20gostaria%20de%20saber%20mais%20sobre%20os%20planos%20e%20benef%C3%ADcios%20da%20Seitel!"
            target="_blank"
            rel="noopener noreferrer"
            ><button
                class="bg-gradient-to-b mt-6 from-primary to-secondary hover:-translate-y-1 transition-all duration-300 w-52 rounded-3xl font-bold mb-8 text-white py-2"
                >ASSINE JÁ</button
            ></a
        >
        <p class="font-light my-4">Consulte condições</p>
    </div>
